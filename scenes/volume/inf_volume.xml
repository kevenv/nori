    <camera type="perspective">
        <transform name="toWorld">
            <lookat target="0,0,0" origin="0,-4,0" up="0,0,1"/>
        </transform>

        <float name="fov" value="37"/>

        <integer name="width" value="300"/>
        <integer name="height" value="300"/>
    </camera>
</scene>